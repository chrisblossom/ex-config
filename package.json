{
  "name": "ex-config",
  "version": "1.0.1",
  "description": "Extendable configuration processor.",
  "keywords": [
    "config",
    "configuration",
    "extend",
    "extendable",
    "cosmiconfig",
    "rc",
    "resolve",
    "prefix",
    "require",
    "resolve string",
    "require string",
    "string config",
    "string configuration"
  ],
  "license": "ISC",
  "author": "Chris Blossom",
  "repository": "chrisblossom/ex-config",
  "homepage": "https://github.com/chrisblossom/ex-config",
  "main": "build/ex-config.js",
  "scripts": {
    "clean": "del ./build/*",
    "lint": "eslint --ext .js .",
    "lint.fix": "eslint --fix --ext .js .",
    "format": "prettier **/*.{js,md,json} --write",
    "test": "jest",
    "build": "npm run clean && concurrently \"npm run build.babel\" \"npm run build.flow\"",
    "build.babel": "NODE_ENV=production babel src -d build --ignore test.js,__sandbox__/ --source-maps",
    "build.flow": "NODE_ENV=production flow-copy-source --ignore \"**/*.test.js\" --ignore \"**/__sandbox__/**/*\" src build",
    "dev": "npm run clean && concurrently \"npm run dev.babel\" \"npm run dev.flow\"",
    "dev.babel": "NODE_ENV=development babel -w src/ -d build/ --ignore test.js,__sandbox__/ --source-maps",
    "dev.flow": "NODE_ENV=development flow-copy-source -w --ignore \"**/*.test.js\" --ignore \"**/__sandbox__/**/*\" src build"
  },
  "lint-staged": {
    "*.{js,md,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@chrisblossom/eslint-config": "^1.0.1",
    "@chrisblossom/test-utils": "^1.0.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-plugin-dynamic-import-node": "^1.2.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-flow": "^6.23.0",
    "concurrently": "^3.5.1",
    "del-cli": "^1.1.0",
    "eslint": "^4.18.0",
    "flow-bin": "^0.66.0",
    "flow-copy-source": "^1.3.0",
    "jest": "^22.4.0",
    "prettier": "^1.10.2"
  },
  "dependencies": {
    "joi": "^12.0.0",
    "lodash": "^4.17.5",
    "resolve-with-prefix": "^1.0.0"
  }
}
